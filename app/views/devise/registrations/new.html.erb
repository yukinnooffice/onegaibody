<div class="wrapper fadeInDown">
  <h2 class="section-top"><span class="fas fa-dumbbell" aria-hidden="true"></span> 新規会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'layouts/error_messages', resource: @user %>
    <table class="user_info user_form " style="margin-right: 115px;">
      <tbody>
        <tr>
          <td><%= f.label :neme, "" %></td>
          <td><%= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </tbody>
    </table>

          <div class="text-center">
            <%= f.submit "新規登録", class: "submit" %>
          </div>
  <% end %>

  <h2 class="section-ttl">既に登録済みの方</h2>
  <p><%= link_to "こちらからログインしてください。", new_user_session_path, class: "btn btn-sm btn-hachiss" %></p>
</div>
